{

  "manifest_version": 2,
  "name": "Basecamp 3 Helper",
  "version": "0.1",

  "description": "Helpful tweaks for Basecamp 3",
  "applications": {
    "gecko": {
        "id": "bc3-helper@janustech.net"
    }
  },

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://3.basecamp.com/*"],
      "js": ["bundle.js"],
      "css": ["bundle.css"]
    }
  ]

}
